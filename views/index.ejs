<%- include('./_partials/_header'); -%>

  <section>
    <div class="container-fluid">
      <div class="row mx-0">
        <div class="col-md-6">
          <div class="card border-0 text-white text-center"><img src="images/<%= categoryList[1].image %>"
              alt="Card image" class="card-img">
            <div class="card-img-overlay d-flex align-items-center">
              <div class="w-100 py-3">
                <h2 class="display-3 font-weight-bold mb-4"><%= categoryList[1].name %></h2><a href="category.html" class="btn btn-light"><%= categoryList[1].textLabel %></a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card border-0 text-white text-center"><img src="images/<%= categoryList[2].image %>"
              alt="Card image" class="card-img">
            <div class="card-img-overlay d-flex align-items-center">
              <div class="w-100 py-3">
                <h2 class="display-3 font-weight-bold mb-4"><%= categoryList[2].name %></h2><a href="category.html" class="btn btn-light"><%= categoryList[2].textLabel %></a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row mx-0">
        <% for (let imageIndex = 3; imageIndex <= 5; imageIndex++) { %>
          <div class="col-lg-4">
            <div class="card border-0 text-center text-white"><img src="images/<%= categoryList[imageIndex].image %>"
                alt="Card image" class="card-img">
              <div class="card-img-overlay d-flex align-items-center">
                <div class="w-100">
                  <h2 class="display-4 mb-4"><%= categoryList[imageIndex].name %></h2><a href="category.html" class="btn btn-link text-white"><%= categoryList[imageIndex].textLabel %>
                    <i class="fa-arrow-right fa ml-2"></i></a>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </section>
  
  <%- include('./_partials/_footer'); -%>
